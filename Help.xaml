<Window x:Class="EVENTPULSE.Ayuda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayuda" 
        Height="500" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <!-- Dos columnas: la primera para Leyenda, la segunda para Sobre la App -->
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- ========================= -->
        <!-- BLOQUE: LEYENDA          -->
        <!-- ========================= -->
        <Border Grid.Column="0" 
                Background="#E8E8E8" 
                BorderBrush="Black" 
                BorderThickness="1" 
                CornerRadius="8"
                Margin="5"
                Padding="15">

            <StackPanel>
                <!-- Título de la sección -->
                <TextBlock Text="LEYENDA" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>

                <!-- Fila Icono 1 -->
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Source="imagenes/IMGborrar.png"
                           Width="90"
                           Height="90"
                           VerticalAlignment="Center"
                           Grid.Column="0"/>
                    <TextBlock Text="Borrar un elemento." 
                               VerticalAlignment="Center"
                               Margin="10,0"
                               Grid.Column="1"/>
                </Grid>

                <!-- Fila Icono 2 -->
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="95*" />
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="48*"/>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="62*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="imagenes/IMGeditar.png"
                           Width="30"
                           Height="30"
                           VerticalAlignment="Top"
                           Grid.Column="1" Margin="25,-20,40,0"/>
                    <TextBlock Text="Editar los datos." 
                               VerticalAlignment="Top"
                               Margin="10,-13,-85,0"
                               Grid.Column="2" Grid.ColumnSpan="8"/>
                </Grid>

                <!-- Fila Icono 3 -->
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Source="imagenes/IMGinfo.png"
                           Width="30"
                           Height="30"
                           VerticalAlignment="Center"
                           Grid.Column="1" Margin="10,0,190,0"/>
                    <TextBlock Text="Mostrar más información."
                               VerticalAlignment="Top"
                               Margin="98,4,-78,0"
                               Grid.Column="1"/>
                </Grid>

            </StackPanel>
        </Border>

        <!-- ========================= -->
        <!-- BLOQUE: SOBRE LA APP      -->
        <!-- ========================= -->
        <Border Grid.Column="1"
                Background="#E8E8E8"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="8"
                Margin="5"
                Padding="15">

            <StackPanel>
                <!-- Título de la sección -->
                <TextBlock Text="SOBRE LA APLICACIÓN" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Autores:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>

                <!-- ListBox donde se mostrarán los autores -->
                <ListBox x:Name="AutoresList" 
                         Background="White"
                         BorderThickness="1"
                         BorderBrush="#ccc"
                         Margin="0,0,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <!-- Nombre real -->
                                <TextBlock Text="{Binding Nombre}" 
                                           FontWeight="Bold"/>
                                <!-- Email -->
                                <TextBlock Text="{Binding Email}" 
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Información de la versión -->
                <TextBlock Text="Versión de la Aplicación: 2.1.3" 
                           FontSize="14" 
                           HorizontalAlignment="Right" 
                           Margin="5"/>
                <TextBlock Text="Última Actualización: 2024-12-03" 
                           FontSize="14" 
                           HorizontalAlignment="Right" 
                           Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<Window x:Class="EVENTPULSE.AgregarEscenario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Escenario"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0"
        ResizeMode="NoResize"
        Height="400" Width="600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Campo de Nombre -->
        <Label Grid.Row="0" Grid.Column="0" Content="Nombre del Escenario:" FontWeight="Bold" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5" FontSize="14" />

        <!-- Campo de Aforo -->
        <Label Grid.Row="1" Grid.Column="0" Content="Aforo Máximo:" FontWeight="Bold" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="txtAforo" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" FontSize="14" />

        <!-- Campo de Salidas -->
        <Label Grid.Row="2" Grid.Column="0" Content="Número de Salidas:" FontWeight="Bold" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="txtNumeroSalidas" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" FontSize="14" />

        <!-- Campo de Aseos -->
        <Label Grid.Row="3" Grid.Column="0" Content="Número de Aseos:" FontWeight="Bold" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="txtNumeroAsesos" Grid.Row="3" Grid.Column="1" Margin="5" Padding="5" FontSize="14" />

        <!-- Campo de Servicios Médicos -->
        <Label Grid.Row="4" Grid.Column="0" Content="Servicios Médicos:" FontWeight="Bold" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="txtNumeroServiciosMedicos" Grid.Row="4" Grid.Column="1" Margin="5" Padding="5" FontSize="14" />

        <!-- Botones -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Guardar" Click="BtnGuardar_Click" Margin="5" Width="100" Height="30"
                    Background="Black" Foreground="White" FontSize="14" FontWeight="Bold" />
            <Button Content="Cancelar" Click="BtnCancelar_Click" Margin="5" Width="100" Height="30"
                    Background="Gray" Foreground="White" FontSize="14" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
